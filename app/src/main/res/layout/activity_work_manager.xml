<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workmanager.WorkManagerActivity">

    <Button
        android:id="@+id/btStartWork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_work"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvShowOneTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tvShowTwoTask"
        app:layout_constraintEnd_toEndOf="@+id/tvShowTwoTask"
        app:layout_constraintStart_toStartOf="@+id/tvShowTwoTask"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvShowTwoTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/btStartWork"
        app:layout_constraintEnd_toEndOf="@+id/btStartWork"
        app:layout_constraintStart_toStartOf="@+id/btStartWork"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>